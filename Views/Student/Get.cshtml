@model List<WebApp.Crud.Models.DTOs.StudentDto>
@{
    ViewData["Title"] = "Student Homepage";
}

<div class="text-center">
    <h1> Student Details: </h1>
    <table class="table m-5">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">University</th>
                <th scope="col">Cell Phone Number</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model) {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.University</td>
                    <td>@student.CellPhoneNumber</td>
                    <td>
                        <!-- Edit Button -->
                        <a href="@Url.Action("Edit", "Students", new { id = student.Id })" class="btn btn-warning btn-sm">
                           Edit
                        </a>

                        <!-- Delete Button -->
                        <a href="@Url.Action("Delete", "Students", new { id = student.Id })" class="btn btn-danger btn-sm">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>